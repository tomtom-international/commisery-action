{
  "name": "commisery",
  "version": "1.0.0",
  "description": "Commisery Action",
  "main": "dist/validate/index.js",
  "scripts": {
    "build": "run-p build:*",
    "build:validate": "ncc build -o dist/validate src/main.ts && cp -f requirements.txt dist/validate/requirements.txt",
    "build:bump": "ncc build -o dist/bump src/bump.ts && cp -f requirements.txt dist/bump/requirements.txt",
    "test": "echo \"Warning: no test specified\"",
    "lint": "prettier --check **/*.ts",
    "format": "prettier --write **/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomtom-international/commisery-action.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tomtom-international/commisery-action/issues"
  },
  "homepage": "https://github.com/tomtom-international/commisery-action#readme",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.0.3",
    "fs": "^0.0.1-security"
  },
  "devDependencies": {
    "@types/node": "^18.7.18",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "typescript": "^4.8.3",
    "@vercel/ncc": "^0.34.0"
  },
  "files": ["requirements.txt"]
}
